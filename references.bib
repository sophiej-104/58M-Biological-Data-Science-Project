  volume   =  148,
  number   =  6,
  pages    = "1449--1457",
  month    =  dec,
  year     =  1978,
  url      = "https://www.ncbi.nlm.nih.gov/pubmed/722242",
  language = "en",
  issn     = "0022-1007",
  pmid     = "722242",
  doi      = "10.1084/jem.148.6.1449",
  pmc      = "PMC2185103"
}


