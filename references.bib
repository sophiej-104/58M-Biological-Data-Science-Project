@ARTICLE{Sindrilaru2011-qj,
  title    = "An unrestrained proinflammatory {M1} macrophage population
              induced by iron impairs wound healing in humans and mice",
  author   = "Sindrilaru, Anca and Peters, Thorsten and Wieschalka, Stefan and
